<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left Side -->
    </nav>
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>

      <!-- Right Side -->

      <div class="level-right">
              <p class="level-item">
                <%= link_to "Edit", edit_post_path(@post), class:"button" %>
              </p>
              <p class="level-item">
                <%= button_to "Delete", @post, method: :delete, confirm: "Are you sure?", class:"button is-danger" %>
                </p>
          </div>

    <hr/>

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="comments"></section>
